#toast-container
  display: block
  position: fixed
  z-index: 10000
  @media only screen and (max-width: (interpolation nil $small-screen nil))
    min-width: 100%
    bottom: 0%
  @media only screen and (min-width: (interpolation nil $small-screen-up nil)) and (max-width: (interpolation nil $medium-screen nil))
    left: 5%
    bottom: 7%
    max-width: 90%
  @media only screen and (min-width: (interpolation nil $medium-screen-up nil))
    top: 10%
    right: 7%
    max-width: 86%
.toast
  @extend .z-depth-1
  border-radius: 2px
  top: 0
  width: auto
  clear: both
  margin-top: 10px
  position: relative
  max-width: 100%
  height: auto
  min-height: $toast-height
  line-height: 1.5em
  word-break: break-all
  background-color: $toast-color
  padding: 10px 25px
  font-size: 1.1rem
  font-weight: 300
  color: $toast-text-color
  display: flex
  align-items: center
  justify-content: space-between
  .btn, .btn-flat
    margin: 0
    margin-left: 3rem
  &.rounded
    border-radius: 24px
  @media only screen and (max-width: (interpolation nil $small-screen nil))
    width: 100%
    border-radius: 0
  @media only screen and (min-width: (interpolation nil $small-screen-up nil)) and (max-width: (interpolation nil $medium-screen nil))
    float: left
  @media only screen and (min-width: (interpolation nil $medium-screen-up nil))
    float: right